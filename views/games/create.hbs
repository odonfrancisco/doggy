{{#if game}}
<form action="/games/edit/{{game._id}}" method="post">
{{else}}
<form action="/games/create" method="post">
{{/if}}
    <input type="text" name="name" placeholder="Game Name" value="{{game.name}}">
    <br>
    <input type="text" name="description" placeholder="Description of what's boutta go down" value="{{game.description}}">
    <br>
    <label for="category">Category</label>
    <select name="category" value="{{game.category}}">
        {{#if game}}
            <option value="{{game.category}}">{{game.category}}</option>
        {{/if}}
        <option value="Basketball">Basketball</option>
        <option value="Soccer">Soccer</option>
        <option value="Baseball">BaseBall</option>
        <option value="Football">FootBall</option>
        <option value="Tennis">Tennis</option>
        <option value="Other">Other</option>
    </select>
    <br>
    <label for="minPlayers">Min Players:</label>
    <input type="number" name="minPlayers" value="{{game.minPlayers}}">
    
    <label for="maxPlayers">Max Players:</label>
    <input type="number" name="maxPlayers" value="{{game.maxPlayers}}">
    <br>
    <input type="text" name="location" placeholder="Location">    
    <br><br>
    <input type="time" name="time" {{#if game}} value="{{game.time}}" {{else}} value="12:00" {{/if}}>
    <br>
    <input type="date" name="date" value="{{game.date}}">
    <br>

    <label for="equipment">Equipment needed (Separated by commas)</label>
    <input type="text" name="equipment" placeholder="Equipment needed separated by commmas" value="{{#each game.equipment}}{{this.name}}, {{/each}}">

    <br>
    <label for="private">Private</label>
    <input type="checkbox" value="Private Game" name="private" {{#if game.private}}checked{{/if}}>
    <br>

    {{#if game}}
        <input type="submit" value="Edit {{game.name}}">
    {{else}}
        <input type="submit" value="Create Game!">
    {{/if}}

</form>

{{#if game}}
    <a href="/games/delete/{{game._id}}"><input type="button" value="DELETE"></a>
{{/if}}